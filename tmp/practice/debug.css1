/* debug.css - 5-Layer HUD System */

/* -----------------------------------------------------------
   1. BASE OVERLAY STYLES
   These apply to all HUD divs to keep them out of the layout flow.
   ----------------------------------------------------------- */
.result-layer, 
.guide-layer, 
.mockup-layer, 
.white-layer {
    display: none; /* Hidden by default */
    position: absolute;
    top: 0;
    left: 0;
    width: 148mm;
    height: 210mm;
    background-size: 148mm 210mm;
    background-repeat: no-repeat;
    pointer-events: none; /* Click "through" the image to your text */
}

/* -----------------------------------------------------------
   2. LAYER DEFINITIONS (Top to Bottom)
   ----------------------------------------------------------- */

/* Result Layer (Toggled by 'r') - Red Tint */
body.show-result .result-layer {
    display: block;
    z-index: 500;
    background-image: url('result.png');
    opacity: 0.5;
    filter: sepia(100%) hue-rotate(-50deg) saturate(500%);
}

/* Guide Layer (Toggled by 'g') - Blue Tint */
body.show-guide .guide-layer {
    display: block;
    z-index: 400;
    background-image: url('guide.png');
    opacity: 0.3;
    filter: sepia(100%) hue-rotate(180deg) saturate(500%);
}

/* Mockup Layer (Toggled by 'm') - Green Tint */
body.show-mockup .mockup-layer {
    display: block;
    z-index: 300;
    background-image: url('mockup.png');
    opacity: 0.5;
    filter: sepia(100%) hue-rotate(70deg) saturate(500%);
}

/* White Layer (Toggled by 'w') - Opaque Isolation */
body.show-white .white-layer {
    display: block;
    z-index: 200;
    background: white;
}

/* Working Layer (Your HTML) sits at the default z-index (roughly 0-100) */

/* -----------------------------------------------------------
   3. STRUCTURAL DEBUGGING (Visible when ANY HUD is active)
   ----------------------------------------------------------- */

/* Show column boundaries in Red */
body.show-result .column,
body.show-guide .column,
body.show-mockup .column,
body.show-white .column {
    outline: 1px solid rgba(255, 0, 0, 0.5);
    outline-offset: -1px;
}

/* Show the grid gutter/container in Blue */
body.show-result .grid-container,
body.show-guide .grid-container,
body.show-mockup .grid-container,
body.show-white .grid-container {
    outline: 1px dashed rgba(0, 0, 255, 0.3);
    outline-offset: -1px;
}

